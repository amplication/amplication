{
  "name": "code-gen-utils",
  "$schema": "../../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "libs/util/code-gen-utils/src",
  "projectType": "library",
  "targets": {
    "build": {
      "executor": "@nx/js:tsc",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/libs/util/code-gen-utils",
        "main": "libs/util/code-gen-utils/src/index.ts",
        "tsConfig": "libs/util/code-gen-utils/tsconfig.lib.json",
        "assets": ["libs/util/code-gen-utils/*.md"]
      }
    },
    "publish": {
      "executor": "nx:run-commands",
      "options": {
        "command": "node scripts/publish.mjs util-code-gen-utils {args.ver} {args.tag}"
      },
      "dependsOn": [
        {
          "target": "build"
        }
      ]
    },
    "lint": {
      "executor": "@nx/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": [
          "libs/util/code-gen-utils/**/*.{ts,tsx,js,jsx}",
          "libs/util/code-gen-utils/package.json"
        ]
      }
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/libs/util/code-gen-utils"],
      "options": {
        "jestConfig": "libs/util/code-gen-utils/jest.config.ts",
        "passWithNoTests": true
      }
    }
  },
  "tags": []
}
