datasource db {
  provider = "postgresql"
  url      = env("DB_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Plugin {
  categories     Json?    @default("[]")
  createdAt      DateTime @default(now())
  description    String?
  downloads      Int?
  github         String?
  icon           String?
  id             String   @id @default(cuid())
  name           String?
  npm            String?
  pluginId       String?  @unique
  taggedVersions Json?
  updatedAt      DateTime @updatedAt
  website        String?
}

model PluginVersion {
  configurations  Json?
  createdAt       DateTime @default(now())
  deprecated      String?
  id              String   @id @default(cuid())
  isLatest        Boolean?
  pluginId        String?
  pluginIdVersion String   @unique
  settings        Json?
  updatedAt       DateTime @updatedAt
  version         String?
}

model Category {
  createdAt   DateTime @default(now())
  description String?
  icon        String?
  id          String   @id @default(cuid())
  name        String   @unique
  rank        Int?     @unique
  updatedAt   DateTime @updatedAt
}
