datasource postgres {
  provider = "postgresql"
  url      = env("DB_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  createdAt DateTime @default(now())
  firstName String?
  id        String   @id @default(cuid())
  lastName  String?
  password  String
  roles     Json
  updatedAt DateTime @updatedAt
  username  String   @unique
}

model Plugin {
  createdAt      DateTime @default(now())
  description    String?
  github         String?
  icon           String?
  id             String   @id @default(cuid())
  name           String?
  npm            String?
  pluginId       String?  @unique
  taggedVersions Json?
  updatedAt      DateTime @updatedAt
  website        String?
}

model PluginVersion {
  createdAt       DateTime @default(now())
  deprecated      String?
  id              String   @id @default(cuid())
  isLatest        Boolean?
  pluginId        String?
  pluginIdVersion String   @unique
  settings        Json?
  updatedAt       DateTime @updatedAt
  version         String?
}
