datasource mongo {
  provider = "mongodb"
  url      = env("DB_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  createdAt DateTime @default(now())
  firstName String?
  id        String   @id @default(auto()) @map("_id") @mongo.ObjectId
  lastName  String?
  password  String
  roles     Json
  updatedAt DateTime @updatedAt
  username  String   @unique
}

model Plugin {
  createdAt   DateTime @default(now())
  description String?
  github      String?
  icon        String?
  id          String   @id @default(auto()) @map("_id") @mongo.ObjectId
  name        String?
  npm         String?
  pluginId    String?  @unique
  updatedAt   DateTime @updatedAt
  website     String?
}

model PluginVersion {
  createdAt       DateTime @default(now())
  id              String   @id @default(auto()) @map("_id") @mongo.ObjectId
  pluginId        String?
  pluginIdVersion String   @unique
  settings        Json?
  updatedAt       DateTime @updatedAt
  version         String?
}
