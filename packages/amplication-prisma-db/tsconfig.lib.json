{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "module": "commonjs",
    "outDir": "../../dist/out-tsc",
    "declaration": true,
    "types": ["node"],
	"noImplicitAny": false,
	"allowSyntheticDefaultImports": true,
	"resolveJsonModule": true,
	"esModuleInterop": true,
	"jsx": "react"
  },
  "exclude": ["jest.config.ts", "**/*.spec.ts", "**/*.test.ts"],
  "include": ["src/index.ts"]
}
