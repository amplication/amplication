{
  "name": "amplication-design-system",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/amplication-design-system/src",
  "projectType": "library",
  "tags": [],
  "targets": {
    "build": {
      "executor": "@nrwl/web:rollup",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/packages/amplication-design-system",
        "tsConfig": "packages/amplication-design-system/tsconfig.lib.json",
        "project": "packages/amplication-design-system/package.json",
        "entryFile": "packages/amplication-design-system/src/index.ts",
        "external": ["react/jsx-runtime"],
        "rollupConfig": "@nrwl/react/plugins/bundle-rollup",
        "compiler": "swc",
        "assets": [
          {
            "glob": "packages/amplication-design-system/README.md",
            "input": ".",
            "output": "."
          }
        ]
      }
    },
    "format": {
      "executor": "nx:run-commands",
      "inputs": ["{projectRoot}/src"],
      "options": {
        "command": "prettier --write .",
        "cwd": "packages/amplication-design-system"
      }
    },
    "lint": {
      "executor": "@nrwl/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": [
          "packages/amplication-design-system/**/*.{ts,tsx,js,jsx}"
        ]
      }
    },
    "test": {
      "executor": "@nrwl/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "packages/amplication-design-system/jest.config.ts",
        "passWithNoTests": true
      }
    }
  }
}
