{
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/amplication-design-system/src",
  "projectType": "library",
  "targets": {
    "ng-packagr-build": {
      "executor": "@nrwl/angular:ng-packagr-lite",
      "outputs": [
        "dist/packages/@amplication/design-system"
      ],
      "options": {
        "project": "packages/amplication-design-system/ng-package.json"
      },
      "configurations": {
        "production": {
          "tsConfig": "packages/amplication-design-system/tsconfig.lib.prod.json"
        },
        "development": {
          "tsConfig": "packages/amplication-design-system/tsconfig.lib.json"
        }
      },
      "defaultConfiguration": "production",
      "dependsOn": [
        {
          "target": "ng-packagr-build",
          "projects": "dependencies"
        }
      ]
    },
    "build": {
      "executor": "@nrwl/js:tsc",
      "outputs": [
        "{options.outputPath}"
      ],
      "options": {
        "outputPath": "dist/packages/@amplication/design-system",
        "tsConfig": "packages/amplication-design-system/tsconfig.lib.json",
        "packageJson": "packages/amplication-design-system/package.json",
        "main": "packages/amplication-design-system/src/index.ts",
        "assets": [
          "packages/amplication-design-system/*.md"
        ]
      },
	  "dependsOn": [
		{
		  "target": "build",
		  "projects": "dependencies"
		}
	  ]
    },
    "lint": {
      "executor": "@nrwl/linter:eslint",
      "outputs": [
        "{options.outputFile}"
      ],
      "options": {
        "lintFilePatterns": [
          "packages/amplication-design-system/**/*.ts"
        ]
      }
    },
    "test": {
      "executor": "@nrwl/jest:jest",
      "outputs": [
        "coverage/packages/amplication-design-system"
      ],
      "options": {
        "jestConfig": "packages/amplication-design-system/jest.config.ts",
        "passWithNoTests": true
      }
    }
  },
  "tags": [],
  "implicitDependencies": []
}
