{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@amplication/code-gen-types": [
        "packages/amplication-code-gen-types/src/index.ts"
      ],
      "@amplication/code-gen-types/*": [
        "packages/amplication-code-gen-types/src/*"
      ],
      "@amplication/design-system": [
        "packages/amplication-design-system/src/index.ts"
      ],
      "@amplication/design-system/*": [
        "packages/amplication-design-system/src/*"
      ],
      "@amplication/git-utils": ["packages/amplication-git-utils/src/index.ts"],
      "@amplication/git-utils/*": ["packages/amplication-git-utils/src/*"],
      "@amplication/kafka/*": ["packages/amplication-kafka/src/*"],
      "@amplication/nest-logger-module": [
        "packages/amplication-nest-logger-module/src/index.ts"
      ],
      "@amplication/nest-logger-module/*": [
        "packages/amplication-nest-logger-module/src/*"
      ],
      "@amplication/plugin-api": [
        "packages/amplication-plugin-api/src/index.ts"
      ],
      "@amplication/plugin-api/*": ["packages/amplication-plugin-api/src/*"],
      "@amplication/prisma-db": ["packages/amplication-prisma-db/src/index.ts"],
      "@amplication/prisma-db/*": ["packages/amplication-prisma-db/src/*"],
      "@amplication/util/nestjs/kafka": ["libs/util/nestjs/kafka/src/index.ts"],
      "@primer/react/deprecated": ["node_modules/@primer/react/lib/deprecated"]
    }
  },
  "ts-node": {
    "compilerOptions": {
      "module": "commonjs"
    }
  },
  "exclude": ["node_modules", "tmp"]
}
