{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "module": "esnext",
    "moduleResolution": "node",
    "noUnusedParameters": false,
    "noFallthroughCasesInSwitch": true,
    "noUnusedLocals": false,
    "strictNullChecks": false,
    "noImplicitReturns": true,
    "strictFunctionTypes": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "skipLibCheck": true,
    "strictBindCallApply": true,
    "target": "es2015",
    "lib": [
      "es5",
      "es2015",
      "dom",
      "dom.iterable",
      "ES2017.Object",
      "ES2019.Object",
      "ES2016.Array.Include",
      "ES2019.Array",
      "ES2021.String"
    ],
    "types": ["jest"],
    "baseUrl": ".",
    "paths": {
      "@amplication/cli": ["packages/amplication-cli/src/index.ts"],
      "@amplication/code-gen-types": [
        "packages/amplication-code-gen-types/src/index.ts"
      ],
      "@amplication/data-service-generator": [
        "packages/amplication-data-service-generator/src/index.ts"
      ],
      "@amplication/design-system": [
        "packages/amplication-design-system/src/index.ts"
      ],
      "@amplication/design-system/icons": [
        "packages/amplication-design-system/icons/amplicationicon.css"
      ],
      "@amplication/git-pull-request-service": [
        "packages/amplication-git-pull-request-service/src/index.ts"
      ],
      "@amplication/git-service": [
        "packages/amplication-git-service/src/index.ts"
      ],
      "@amplication/kafka": ["packages/amplication-kafka/src/index.ts"],
      "@amplication/nest-logger-module": [
        "packages/amplication-nest-logger-module/src/index.ts"
      ],
      "@amplication/prisma-db": ["packages/amplication-prisma-db/src/index.ts"],
      "@amplication/scheduler": ["packages/amplication-scheduler/src/index.ts"],
      "@amplication/storage-gateway": [
        "packages/amplication-storage-gateway/src/index.ts"
      ],
      "@amplication/test": ["packages/test/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
