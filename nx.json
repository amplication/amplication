{
  "extends": "nx/presets/npm.json",
  "pluginsConfig": {
    "@nrwl/js": {
      "analyzeSourceFiles": true
    }
  },
  "npmScope": "amplication",
  "affected": {
    "defaultBase": "master"
  },
  "implicitDependencies": {
    "package.json": {
      "dependencies": "*",
      "devDependencies": "*"
    },
    ".eslintrc.json": "*"
  },
  "tasksRunnerOptions": {
    "default": {
      "runner": "@nrwl/nx-cloud",
      "options": {
        "cacheableOperations": [
          "install",
          "prebuild",
          "build",
          "postbuild",
          "prepare",
          "check-format",
          "format",
          "test",
          "db:init",
          "lint",
          "test:e2e",
          "test:cov",
          "db:prisma:generate",
          "graphql:schema:generate",
          "graphql:schema:check"
        ]
      }
    }
  },
  "targetDefaults": {
    "test": {
      "dependsOn": ["db:prisma:generate", "^db:prisma:generate", "^prebuild"]
    },
    "prebuild": {
      "dependsOn": ["^prebuild"]
    },
    "build": {
      "dependsOn": [
        "prebuild",
        "^build",
        "db:prisma:generate",
        "^db:prisma:generate"
      ]
    },
    "postbuild": {
      "dependsOn": ["build", "^postbuild"]
    },
    "serve": {
      "dependsOn": ["db:prisma:generate", "^db:prisma:generate", "^prebuild"]
    },
    "lint": {
      "inputs": ["default", "{workspaceRoot}/.eslintrc.json"]
    },
    "docker:build": {
      "dependsOn": ["prebuild", "build", "postbuild"]
    }
  },
  "generators": {
    "@nrwl/react": {
      "application": {
        "style": "scss",
        "linter": "eslint",
        "babel": true
      },
      "component": {
        "style": "scss"
      },
      "library": {
        "style": "scss",
        "linter": "eslint"
      }
    }
  },
  "defaultProject": "amplication-client"
}
