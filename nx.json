{
  "extends": "nx/presets/npm.json",
  "npmScope": "amplication",
  "affected": {
    "defaultBase": "master"
  },
  "implicitDependencies": {
    "package.json": {
      "dependencies": "*",
      "devDependencies": "*"
    },
    ".eslintrc.json": "*"
  },
  "tasksRunnerOptions": {
    "default": {
      "runner": "@nrwl/nx-cloud",
      "options": {
        "cacheableOperations": [
          "install",
          "prebuild",
          "build",
          "prepare",
          "test",
          "test:update-snapshot",
          "db:init",
          "lint",
          "test:e2e",
          "test:cov",
          "db:prisma:generate",
          "graphql:schema:generate",
          "graphql:schema:check"
        ]
      }
    }
  },
  "targetDefaults": {
    "format:check": {
      "options": {
        "exclude": ["**/helm/**/*"]
      }
    },
    "test": {
      "dependsOn": ["db:prisma:generate", "^db:prisma:generate"]
    },
    "prebuild": {
      "dependsOn": ["^prebuild"]
    },
    "build": {
      "dependsOn": [
        "prebuild",
        "^build",
        "db:prisma:generate",
        "^db:prisma:generate"
      ]
    },
    "postbuild": {
      "dependsOn": ["build", "^postbuild"]
    },
    "serve": {
      "dependsOn": ["db:prisma:generate", "^db:prisma:generate"]
    },
    "lint": {
      "inputs": ["default", "{workspaceRoot}/.eslintrc.json"]
    },
    "docker:build": {
      "dependsOn": ["prebuild", "build", "postbuild"]
    }
  }
}
