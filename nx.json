{
  "extends": "nx/presets/npm.json",
  "npmScope": "amplication",
  "affected": {
    "defaultBase": "master"
  },
  "implicitDependencies": {
    "package.json": {
      "dependencies": "*",
      "devDependencies": "*"
    },
    ".eslintrc.json": "*"
  },
  "tasksRunnerOptions": {
    "default": {
      "runner": "@nrwl/nx-cloud",
      "options": {
        "cacheableOperations": [
          "build",
          "prepare",
          "check-format",
          "test",
          "db:init",
          "lint",
          "test:e2e",
          "test:cov",
          "db:prisma:generate",
          "graphql:schema:generate",
          "graphql:schema:check"
        ]
      }
    }
  },
  "targetDefaults": {
    "test": {
      "dependsOn": ["db:prisma:generate"]
    },
    "build": {
      "dependsOn": ["^build", "db:prisma:generate", "^db:prisma:generate"]
    },
    "serve": {
      "dependsOn": ["db:prisma:generate"]
    },
    "prepare": {
      "dependsOn": ["^prepare"]
    },
    "lint": {
      "inputs": ["default", "{workspaceRoot}/.eslintrc.json"]
    },
    "docker:build": {
      "dependsOn": ["build"]
    }
  }
}
